Generate a coupon

<%= form_tag(generate_coupons_url, method: "get") do %>
  <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password, "Password:") %>
  <%= text_field_tag(:password) %>
  <br>
  <%= label_tag("Discount Type") %>
  <%= radio_button_tag(:discount_type, "percentage") %>
  <%= label_tag(:percentage, "Percentage") %>
  <%= radio_button_tag(:discount_type, "fixed") %>
  <%= label_tag(:fixed, "Fixed") %>
  <br>
  <%= label_tag(:value, "Value:") %>
  <%= text_field_tag(:value) %>
  <%= label_tag(:minimum_order_amount, "Minimum Order Amount:") %>
  <%= text_field_tag(:minimum_order_amount) %>
  <%= submit_tag("Generate") %>
<% end %>